# Frontend Environment Variables for SecureShare

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Stripe Configuration (Test Mode Only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# App Configuration
VITE_APP_NAME=SecureShare
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# File Upload Configuration
VITE_MAX_FILE_SIZE=5368709120
VITE_FREE_TIER_LIMIT=104857600
VITE_PREMIUM_TIER_LIMIT=1073741824
VITE_PREMIUM_PRICE=300
VITE_LARGE_PRICE=800

# Security Configuration
VITE_ENCRYPTION_ALGORITHM=AES-256-GCM
VITE_PASSWORD_LENGTH=8
VITE_TOKEN_STORAGE_KEY=secureshare_token
VITE_THEME_STORAGE_KEY=secureshare_theme

# Development Configuration
VITE_DEV_API_DELAY=0
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# URLs and Endpoints
VITE_DOWNLOAD_BASE_URL=http://localhost:5173/d/
VITE_SUPPORT_EMAIL=support@secureshare.dev
VITE_CONTACT_URL=mailto:support@secureshare.dev

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PWA=false

# Notes:
# - Copy this file to .env.local and fill in the actual values
# - Never commit .env.local to version control
# - VITE_ prefix is required for Vite to include variables in the build
# - All file sizes are in bytes
# - Prices are in cents (e.g., 300 = $3.00)
# - Use test Stripe keys only for development